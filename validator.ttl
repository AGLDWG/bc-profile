:req-exists
	a sh:NodeShape ;
	sh:or (
	    [ sh:targetClass schema:CreativeWork ]
	    [ sh:targetClass dcat:Resource ]
	) ;
    sh:property [
        sh:path [ sh:inversePath rdf:type ] ;
        sh:minCount 1 ;
        sh:message "Requirement 2.1.1: Each graph MUST have at least one catalogued resource instance" ;
    ] ;
.

:req-name
	a sh:NodeShape ;
	sh:targetClass schema:CreativeWork , dcat:Resource ;
    sh:message "Requirement 2.1.2: Each catalogued resource MUST have exactly one name which is to be a text literal, indicated using the schema:name predicate" ;
    sh:or (
        [
            sh:property [
                sh:path schema:name ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:or (
                    [ sh:datatype rdf:langString ]
                    [ sh:datatype xsd:string ]
                ) ;
            ] ;
        ]
        [
            sh:property [
                sh:path dcterms:title ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:or (
                    [ sh:datatype rdf:langString ]
                    [ sh:datatype xsd:string ]
                ) ;
            ] ;
        ]
    ) ;
.

:req-description
	a sh:NodeShape ;
	sh:targetClass schema:CreativeWork , dcat:Resource ;
    sh:message "Requirement 2.1.2: Each catalogued resource MUST have exactly one description which is to be a text literal, indicated using the schema:description predicate" ;
    sh:or (
        [
            sh:property [
                sh:path schema:description ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:or (
                    [ sh:datatype rdf:langString ]
                    [ sh:datatype xsd:string ]
                ) ;
            ] ;
        ]
        [
            sh:property [
                sh:path dcterms:description ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:or (
                    [ sh:datatype rdf:langString ]
                    [ sh:datatype xsd:string ]
                ) ;
            ] ;
        ]
    ) ;
.

:req-created
	a sh:NodeShape ;
	sh:targetClass schema:CreativeWork , dcat:Resource ;
    sh:message "Requirement 2.1.3: Each catalogued resource MUST have exactly one created date indicated using the schema:dateCreated predicate with a literal value of either xsd:date, xsd:dateTime or xsd:dateTimeStamp type" ;
    sh:or (
        [
            sh:property [
                sh:path schema:dateCreated ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:or (
                    [ sh:datatype xsd:dateTime ]
                    [ sh:datatype xsd:date ]
                    [ sh:datatype xsd:dateTimeStamp ]
                    [ sh:datatype xsd:gYear ]
                ) ;
            ]
        ]
        [
            sh:property [
                sh:path dcterms:created ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:or (
                    [ sh:datatype xsd:dateTime ]
                    [ sh:datatype xsd:date ]
                    [ sh:datatype xsd:dateTimeStamp ]
                    [ sh:datatype xsd:gYear ]
                ) ;
            ]
        ]
    ) ;
.

