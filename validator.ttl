:req-license
	a sh:NodeShape ;
	sh:targetClass schema:CreativeWork , dcat:Resource ;
    sh:message "Requirement 2.1.8: Each catalogued resource SHOULD indicate a license that defines conditions for its use with the schema:license predicate with the value indicated coming from either the RDF Licenses dataset or being locally-defined odrl:Policy instance" ;
    sh:or (
        [
            sh:property [
                sh:path schema:license ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:nodeKind sh:IRI ;
            ] ;
        ]
        [
            sh:property [
                sh:path dcterms:license ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:nodeKind sh:IRI ;
            ] ;
        ]   
    ) 
.

:req-policies
	a sh:NodeShape ;
	sh:targetClass schema:CreativeWork , dcat:Resource ;
    sh:message "Requirement 2.1.9: Each catalogued resource SHOULD indicate a license that defines conditions for its use with the schema:license predicate with the value indicated coming from either the RDF Licenses dataset or being locally-defined odrl:Policy instance" ;
    sh:property [
        sh:path odrl:hasPolicy ;
        sh:maxCount 1 ;
        sh:nodeKind sh:IRI ;
    ] ;
.

