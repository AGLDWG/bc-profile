                ) ;
            ]
        ]
    ) ;
.

:req-creator
	a sh:NodeShape ;
    sh:targetClass schema:CreativeWork , dcat:Resource ;
    sh:description "Requirement 2.1.4: Each catalogued resource MUST indicate one or more agents with the schema:creator predicate, typed as an schema:Person or schema:Organization" ;
    sh:or (
        [
            sh:property [
                sh:path schema:creator ;
                sh:minCount 1 ;		
                sh:or (
                    [ sh:class schema:Organization ]
                    [ sh:class schema:Person ]
                ) ;
            ] ;        
        ]
        [
            sh:property [
                sh:path dcterms:creator ;
                sh:minCount 1 ;		
                sh:or (
                    [ sh:class schema:Organization ]
                    [ sh:class schema:Person ]
                ) ;
            ] ;        
        ]
    ) ;
.

:req-publisher
	a sh:NodeShape ;
    sh:targetClass schema:CreativeWork , dcat:Resource ;
    sh:description "Requirement 2.1.4: Each catalogued resource MUST indicate one or more agents with the schema:publisher predicate, typed as an schema:Person or schema:Organization" ;
    sh:or (
        [
            sh:property [
                sh:path schema:publisher ;
                sh:minCount 1 ;		
                sh:or (
                    [ sh:class schema:Organization ]
                    [ sh:class schema:Person ]
                ) ;
            ] ;        
        ]
        [
            sh:property [
                sh:path dcterms:publisher ;
                sh:minCount 1 ;		
                sh:or (
                    [ sh:class schema:Organization ]
                    [ sh:class schema:Person ]
                ) ;
            ] ;        
        ]
    ) ;
.

:req-history
	a sh:NodeShape ;
	sh:targetClass schema:CreativeWork , dcat:Resource ;
    sh:message "Requirement 2.1.5: Each catalogued resource SHOULD indicate how it was produced or its origin by use of one of the following predicates: prov:wasDerivedFrom, schema:citation, dcterms:source or skos:historyNote" ;
    sh:or (
        :provenance-properties-01
        :provenance-properties-02
        :provenance-properties-03
        :provenance-properties-04
    ) ;
    sh:severity sh:Warning ;
.

