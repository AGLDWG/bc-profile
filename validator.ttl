    ) ;
.

:req-agent-org
	a sh:NodeShape ;
	sh:targetClass schema:Organization ;
    sh:message "Requirement 2.2.2: Each Agent MUST indicate either a schema:url (for organizations) or a schema:email (for people) predicate with a URL or email value" ;
    sh:property [
        sh:path schema:url ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:anyURI ;
    ] ;
.

:req-agent-person
	a sh:NodeShape ;
	sh:targetClass schema:Person ;
    sh:message "Requirement 2.2.2: Each Agent MUST indicate either a schema:url (for organizations) or a schema:email (for people) predicate with a URL or email value" ;
    sh:property [
        sh:path schema:email ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:anyURI ;
    ] ;
